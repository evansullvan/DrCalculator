<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorSecondary">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"

                    android:padding="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Car Loan"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Car loan"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:elevation="20dp"
                    android:background="@drawable/top_round_corners"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â£423,518"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After 30 years"
                        android:textSize="20sp"

                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Income"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/MonthlyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/input_background"
                        android:hint="$500"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="20dp"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Savings"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/savings"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/input_background"
                        android:hint="10.5%"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="20dp"
                        android:inputType="number"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohtly Debt Payments"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"/>



                    <EditText
                        android:id="@+id/debtPayment"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/input_background"
                        android:hint="10.5%"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="20dp"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Expenses"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"/>



                    <EditText
                        android:id="@+id/Expenses"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/input_background"
                        android:hint="10.5%"
                        android:layout_marginHorizontal="15dp"
                        android:paddingHorizontal="20dp"
                        android:inputType="number"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:id="@+id/calulateBtn"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:text="Calculate"
                        android:textSize="30dp"
                        android:layout_marginTop="30dp"
                        app:strokeWidth="4dp"
                        app:strokeColor="@color/yellow"
                        app:cornerRadius="10dp"
                        android:backgroundTint="@color/yellow"/>




                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



